fun main(){

    val spices = listOf("curry", "pepper", "cayenne", "ginger", "red curry", "green curry", "red pepper")
    val filtered = spices.filter { it.contains("curry") }.sortedBy { it.length }
    println(filtered)
    println("======================")
    val secFilter = spices.filter { it[0] == 'c' && it[it.length-1] == 'e'}
    println(secFilter)
    println("===========================")
    val threeElem = spices.subList(0, 2).first { it[0] == 'c' }
    println(threeElem)
    
}
